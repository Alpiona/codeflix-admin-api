{
  "compilerOptions": {
    "incremental": true,                              
    "target": "es2017",                                
    "experimentalDecorators": true,
    "module": "commonjs",                              
    "baseUrl": "./src",                                
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "strictNullChecks": false,                         
    "skipLibCheck": true,
    "paths": {
      "#seedwork/*": [
        "./@seedwork/*"
      ],
      "#category/*": [
        "./category/*"
      ]
    },
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src/"]
}
